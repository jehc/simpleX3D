<X3D>
    <Scene>

        <!-- set up the test elements -->
        <TimeSensor DEF="ts" startTime="3.14"/>

        <!-- define the test behavior -->
        <TestSuite desc='"Time Sensor"'>
            <Test DEF="Async"
                    desc='"Should (fail to) fire single asynchronous event"'
                    should='"fail"'
                    failWith='"trigger expected 3.14, but was never activated"'>
                <expect name="trigger" type="SFTime" value="3.14" testAt="3.14"/>
            </Test>
        </TestSuite>

        <!-- route scene to tests -->
        <ROUTE fromNode="ts" fromField="cycleTime"
            toNode="Async" toField="trigger"/>
    </Scene>
</X3D>
